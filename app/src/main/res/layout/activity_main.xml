<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mostafaabdel_fatah.settingbtnantimation.MainActivity">

    <TextView
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/refresh"
        android:onClick="refreshbtn_Clicked"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/call"
        android:layout_toLeftOf="@+id/call"
        android:layout_toStartOf="@+id/call"
        android:background="@drawable/refresh"
        android:visibility="invisible" />

    <Button
        android:id="@+id/call"
        android:onClick="callbtn_Clicked"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/heart"
        android:layout_marginBottom="49dp"
        android:layout_toLeftOf="@+id/heart"
        android:layout_toStartOf="@+id/heart"
        android:background="@drawable/call"
        android:visibility="invisible" />

    <Button
        android:id="@+id/heart"
        android:onClick="heartbtn_Clicked"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/search"
        android:layout_toLeftOf="@+id/search"
        android:layout_toStartOf="@+id/search"
        android:background="@drawable/heart"
        android:visibility="invisible" />

    <Button
        android:id="@+id/search"
        android:onClick="searchbtn_Clicked"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/list"
        android:layout_alignEnd="@+id/list"
        android:layout_alignRight="@+id/list"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:background="@drawable/search"
        android:visibility="invisible" />

    <Button
        android:id="@+id/list"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:onClick="settingbtn_Clicked"
        android:background="@drawable/list"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
